@using BasicPersonalSite.Models.Concrete
@model Yetenek
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<h2>UpdateSkill</h2>

<form class="form-group" method="post">
    <div style="margin-bottom: 20px">
        <label>Yetenek Açıklaması</label>
        @Html.TextBoxFor(p => p.Aciklama, new { @class = "form-control" })
    </div>
    <div style="margin-bottom: 20px">
        <label>Yetenek Değer</label>
        @Html.TextBoxFor(p => p.Deger, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-primary">Kaydet</button>
    </div>

</form>